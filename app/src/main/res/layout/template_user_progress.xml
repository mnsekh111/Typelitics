<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:id="@+id/rl_temp_userProgress">

    <com.akexorcist.roundcornerprogressbar.IconRoundCornerProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/rcpb"
        app:rcIconPadding="2dp"
        app:rcIconSize="35dp"
        app:rcIconSrc="@android:drawable/stat_sys_headset"
        app:rcBackgroundPadding="5dp"
        app:rcBackgroundColor="@android:color/white"
        app:rcProgressColor="@android:color/black"
        app:rcProgress="0"
        app:rcMax="100"  />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:id="@+id/rcpbText"
        android:gravity="center"/>

</RelativeLayout>