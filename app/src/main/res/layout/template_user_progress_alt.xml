<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_temp_userProgress"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvNameCPB"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""></TextView>

    <com.github.lzyzsd.circleprogress.CircleProgress xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cpb"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="10dp"
        custom:circle_finished_color="@color/primary_dark"
        custom:circle_suffix_text="%"
        custom:circle_text_color="@android:color/black"
        custom:circle_text_size="16sp"
        custom:circle_unfinished_color="@android:color/white" />

</LinearLayout>