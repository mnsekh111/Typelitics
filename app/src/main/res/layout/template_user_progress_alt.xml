<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_temp_userProgress">

    <com.github.lzyzsd.circleprogress.CircleProgress
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:layout_marginLeft="10dp"
        android:id="@+id/cpb"
        android:layout_width="75dp"
        android:layout_height="75dp"
        custom:circle_finished_color="@color/primary_dark"
        custom:circle_unfinished_color="@android:color/white"
        custom:circle_text_color="@android:color/black"
        custom:circle_suffix_text="%"
        custom:circle_text_size="16sp"/>

</LinearLayout>